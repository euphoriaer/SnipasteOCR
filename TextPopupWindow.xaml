<Window x:Class="SnipasteOCR.TextPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OCR 识别结果"
        Width="600"
        Height="500"
        WindowStyle="ToolWindow"
        ResizeMode="CanResizeWithGrip"
        SizeToContent="Manual"
        ShowInTaskbar="False"
        Topmost="True"
        Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 富文本框 -->
        <TextBox Grid.Row="0"
                 x:Name="ResultTextBox"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 FontFamily="Consolas, 'Microsoft YaHei', Segoe UI"
                 FontSize="14"
                 BorderThickness="1"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 IsReadOnly="True"/>

        <!-- 按钮 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="📋 复制全部" Click="CopyAll_Click" Margin="0,0,10,0" Padding="10,5"/>
            <Button Content="关闭" Click="Close_Click" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>