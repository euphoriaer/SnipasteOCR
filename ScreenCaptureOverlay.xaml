<Window x:Class="SnipasteOCR.ScreenCaptureOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        KeyDown="Window_KeyDown">
    <Border Background="#80000000" MouseDown="Border_MouseDown" MouseMove="Border_MouseMove" MouseUp="Border_MouseUp">
        <Canvas Name="OverlayCanvas">
            <!-- 半透明遮罩 -->
            <Rectangle Name="Mask" Fill="#80000000" />
            <!-- 显示选中区域 -->
            <Rectangle Name="SelectionRect" Stroke="Red" StrokeDashArray="4 2" StrokeThickness="2" Visibility="Collapsed" />
            <TextBlock Name="SizeText" Foreground="White" FontSize="12" Visibility="Collapsed"/>
        </Canvas>
    </Border>
</Window>